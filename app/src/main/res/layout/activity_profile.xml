<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    



<LinearLayout
    android:id="@+id/l1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"

    android:src="@drawable/baseline_arrow_back_24"
        >

    </ImageView>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="profile"
        android:textSize="19dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" dÃ©connecter"
        android:textColor="@color/bleuuu"
        android:layout_alignParentRight="true"
        android:textStyle="normal"
        android:textSize="15dp"></TextView>



</LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bleuuu"
        android:layout_below="@+id/l1"
        android:paddingRight="8dp"
        android:paddingLeft="8dp">

    </View>






    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgview_profile"

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"


        />
    <LinearLayout
        android:id="@+id/l_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgview_profile"
        android:layout_marginTop="63dp"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/imgview_profile"
            android:src="@drawable/baseline_person_24"
            android:layout_marginLeft="70dp"

            >

        </ImageView>

        <TextView
            android:id="@+id/nom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/l_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_layout1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


    <ImageView

        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/nom"
        android:src="@drawable/baseline_local_phone_24"
        android:layout_marginLeft="70dp"

        >


    </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your phone"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/l_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_layout2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/nom"
            android:src="@drawable/baseline_email_24"
            android:layout_marginLeft="70dp"

            >


        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your email"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</RelativeLayout>