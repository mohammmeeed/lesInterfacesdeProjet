<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_reservation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réservation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reservation_title"
        android:layout_marginTop="30dp"
        android:hint="Nom"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <EditText
        android:id="@+id/vcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="16dp"
        android:hint="Matricul de voiture"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:id="@+id/tv_date_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date et heure de la réservation"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/vcl"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/et_date"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_time_title"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:hint="Date"
        android:inputType="date"
        android:minHeight="48dp"
        android:paddingLeft="16dp"

        android:paddingRight="16dp" />

    <EditText
        android:id="@+id/et_time"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_time_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Heure"
        android:inputType="time"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reserver"
        android:layout_below="@+id/et_time"
        android:layout_marginTop="170dp"
        android:backgroundTint="@color/bleuuu"/>
        </RelativeLayout>


